	<table width="25%" border="10">
		<tr>
			<td>Name</td>
			<td><input type="text" name="name" value="<%= name %>" /></td>
		</tr>
		<tr>
			<td>Type</td>
			<td><input type="text" name="type" id="type" value="<%= type %>" /></td>
		</tr>
		<tr>
			<td>Habitat</td>
			<td><input type="text" name="habitat" value="<%= habitat %>" /></td>
		</tr>
	</table>

</form>

<<form action="/pokemon/group" method="post" name="form1">

	<table width="25%" border="10">
		<tr>
			<td>Name</td>
			<td><input type="text" name="type" value="<%= type %>" /></td>
		</tr>
		<tr>
			<td>Type</td>
			<td><input type="text" name="habitat" id="habitat" value="<%= habitat %>" /></td>
		</tr>
		<tr>
			<td>Habitat</td>
			<td><input type="text" name="region" value="<%= region %>" /></td>
		</tr>
