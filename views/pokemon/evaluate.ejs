<<form action="/pokemon/sort" method="post" name="form1">

	<table width="25%" border="10">
		<tr>
			<td>Sort</td>
			<td>
				<input type="radio" id="sortChoice1"
					   name="sort" value="ascending">
				<label for="sortChoice1">Ascending</label>

				<input type="radio" id="contactChoice2"
					   name="contact" value="descending">
				<label for="sortChoice2">Descending</label>
			</td>
		</tr>
		<tr>
			<td>Id</td>
			<td><input type="text" name="id" value="<%= id %>" /></td>
		</tr>
		<tr>
			<td>Height</td>
			<td><input type="text" name="height" id="type" value="<%= height %>" /></td>
		</tr>
		<tr>
			<td>Weight</td>
			<td><input type="text" name="weight" value="<%= weight %>" /></td>
		</tr>
	</table>

</form>


